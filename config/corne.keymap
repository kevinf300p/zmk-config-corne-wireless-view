#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        Cut {
            bindings = <&kp LG(X)>;
            key-positions = <25 26>;
        };

        Copy {
            bindings = <&kp LG(C)>;
            key-positions = <26 27>;
        };

        Paste {
            bindings = <&kp LG(V)>;
            key-positions = <27 28>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base";
            bindings = <
&kp ESC           &kp Q  &kp W  &kp E     &kp R  &kp T            &kp Y      &kp U  &kp I          &kp O    &kp P          &kp BSPC
&kp TAB           &kp A  &kp S  &kp D     &kp F  &kp G            &kp H      &kp J  &kp K          &kp L    &kp SEMICOLON  &kp SQT
&kp LEFT_BRACKET  &kp Z  &kp X  &kp C     &kp V  &kp B            &kp N      &kp M  &kp COMMA      &kp DOT  &kp FSLH       &kp RIGHT_BRACKET
                                &kp LGUI  &mo 1  &mt LSHFT RET    &kp SPACE  &mo 2  &kp BACKSLASH
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Nav";
            bindings = <
&bt BT_CLR    &bt BT_SEL 2  &kp LA(RIGHT)  &trans    &trans             &kp LA(LEFT)            &kp LG(LEFT_ARROW)  &kp LG(DOWN_ARROW)  &kp LG(UP_ARROW)  &kp LG(RIGHT_ARROW)  &trans     &kp DEL
&bt BT_SEL 0  &bt BT_SEL 3  &trans         &trans    &kp C_VOLUME_UP    &kp C_MUTE              &kp LEFT            &kp DOWN            &kp UP            &kp RIGHT            &trans     &trans
&bt BT_SEL 1  &bt BT_SEL 4  &trans         &trans    &kp K_VOLUME_DOWN  &kp LA(LG(C_EJECT))     &kp LA(LEFT)        &kp PAGE_DOWN       &kp PAGE_UP       &kp LA(RIGHT)        &kp LG(F)  &trans
                                           &kp LGUI  &trans             &mt LEFT_SHIFT ENTER    &kp SPACE           &trans              &kp ESCAPE
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "NumSym";
            bindings = <
&kp TAB      &kp EXCL  &kp AT      &kp HASH         &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS    &kp PIPE   &kp NUMBER_7  &kp N8        &kp N9        &kp SLASH     &kp DEL
&kp CARET    &kp AMPS  &kp DOLLAR  &kp KP_ASTERISK  &kp LEFT_BRACKET      &kp RIGHT_BRACKET        &kp MINUS  &kp N4        &kp NUMBER_5  &kp NUMBER_6  &kp NUMBER_0  &kp GRAVE
&kp PERCENT  &kp PLUS  &kp EQUAL   &kp BACKSLASH    &kp LEFT_BRACE        &kp RIGHT_BRACE          &kp UNDER  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp PERIOD    &kp TILDE
                                   &kp LGUI         &trans                &mt LEFT_SHIFT ENTER     &kp SPACE  &trans        &kp ENTER
            >;
        };
    };
};
